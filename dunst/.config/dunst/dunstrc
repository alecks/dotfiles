[global]
    ### Display & Geometry ###
    monitor = 0
    follow = none
    width = 300
    height = (0, 300)
    origin = top-right
    offset = (10, 50)
    scale = 0
    notification_limit = 20
    indicate_hidden = yes
    transparency = 0 # No transparency for Dunst window
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    text_icon_padding = 8 # Ensure padding between text and icon
    frame_width = 3
    # Frame color for global settings will be overridden by urgency sections
    # frame_color = "#7e9cd8" # Kanagawa Blue (set by urgency sections)
    gap_size = 0
    separator_color = frame
    sort = yes
    show_age_threshold = 60

    ### Text & Format ###
    font = Berkeley Mono 12
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    enable_recursive_icon_lookup = true
    icon_theme = Adwaita # Use Adwaita, or "Papirus-Dark" if you prefer
    icon_position = left
    min_icon_size = 16 # Smallest icon size to avoid pixelation
    max_icon_size = 48 # Max icon size for a good balance (was 128, might be too large)
    # No need for icon_path if recursive_icon_lookup is enabled and theme is set

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Mouse ###
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    ### Kanagawa Default Dark Palette (local to [global] for clarity) ###
    # k_background:         #1f1f28 (Main Dark Background)
    # k_foreground:         #c8c093 (Main Light Foreground)
    # k_darker_element:     #2a2a37 (Potion Background - for message backgrounds)
    # k_accent_green:       #6a9588 (Aqua Green - for normal accents/highlights)
    # k_accent_blue:        #7e9cd8 (Blue - for frame color, highlights)
    # k_accent_red:         #ff5555 (Red - for urgent backgrounds/frames)
    # k_accent_yellow:      #8c734b (Yellow-Brown - for subtle accents)
    # k_accent_orange:      #ff9e3b (Orange - for critical accents)
    # k_dark_text_on_light: #1f1f28 (Dark Text for high contrast on bright backgrounds)


    # Progress bar (themed with Kanagawa)
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 0
    progress_bar_corners = all
    progress_bar_background = "#2a2a37" # Kanagawa Potion Background
    progress_bar_foreground = "#6a9588" # Kanagawa Aqua Green

    ### Actions ###
    dmenu = /usr/bin/rofi -dmenu -p dunst
    # Browser for opening urls in context menu.
    browser = /usr/bin/xdg-open


[urgency_low]
    background = "#2a2a37"        # Kanagawa Potion Background
    foreground = "#c8c093"        # Kanagawa Foreground (light text)
    frame_color = "#2a2a37"       # Frame matches background for low urgency

[urgency_normal]
    background = "#2a2a37"        # Kanagawa Potion Background
    foreground = "#c8c093"        # Kanagawa Foreground
    frame_color = "#6a9588"       # Kanagawa Aqua Green frame for normal urgency

[urgency_critical]
    background = "#ff5555"        # Kanagawa Red for critical background
    foreground = "#1f1f28"        # Dark text for high contrast on red background
    frame_color = "#ff9e3b"       # Kanagawa Orange frame for critical urgency
    timeout = 0                   # Critical notifications stay until dismissed
